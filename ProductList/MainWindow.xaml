<Window x:Class="ProductList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductList"
        mc:Ignorable="d"
        Title="ProductList" Height="450" Width="440">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFED9F5D"/>
            <GradientStop Color="#FFD7ED2B" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="0,0,10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="300"  />

            <RowDefinition Height="Auto"  />

        </Grid.RowDefinitions>
        <StackPanel Name="stackPanel" Grid.Row="0" />
        <Button Background="LightGreen" Content="Add" HorizontalAlignment="Left" Margin="29,32,0,0" Grid.Row="1" Width="105" FontSize="18" FontWeight="Bold" Click="Button_Click"/>
        <Button Content="Delete" Background="PaleVioletRed" HorizontalAlignment="Left" Margin="278,32,0,0" Grid.Row="1" VerticalAlignment="Top" Height="42" Width="105" FontSize="18" FontWeight="Bold" Click="Button_Click_1"/>

    </Grid>
</Window>
